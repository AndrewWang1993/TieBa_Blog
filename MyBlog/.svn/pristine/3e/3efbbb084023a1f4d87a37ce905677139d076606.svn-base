<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<description>登录</description>
		<servlet-name>LoginSevlet</servlet-name>
		<servlet-class>com.mct.servlet.LoginSevlet</servlet-class>
	</servlet>
	<servlet>
		<description>注册用户</description>
		<servlet-name>RegistSevlet</servlet-name>
		<servlet-class>com.mct.servlet.RegistSevlet</servlet-class>
	</servlet>
	<servlet>
		<description>下载内容</description>
		<servlet-name>DownloadServlet</servlet-name>
		<servlet-class>com.mct.servlet.DownloadServlet</servlet-class>
	</servlet>
	<servlet>
		<description>更新用户信息</description>
		<servlet-name>UpdateUserInfo</servlet-name>
		<servlet-class>com.mct.servlet.UpdateUserInfo</servlet-class>
	</servlet>
	<servlet>
		<description>发布帖子</description>
		<servlet-name>PublishArticleServlet</servlet-name>
		<servlet-class>com.mct.servlet.PublishArticleServlet</servlet-class>
	</servlet>
	<servlet>
		<description>可分页加载帖子</description>
		<servlet-name>ListArticleServlet</servlet-name>
		<servlet-class>com.mct.servlet.ListArticleServlet</servlet-class>
	</servlet>
	<servlet>
		<description>获取帖子详情</description>
		<servlet-name>GetArticleDetailSevlet</servlet-name>
		<servlet-class>com.mct.servlet.GetArticleDetailSevlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginSevlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegistSevlet</servlet-name>
		<url-pattern>/regist</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DownloadServlet</servlet-name>
		<url-pattern>/download</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateUserInfo</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PublishArticleServlet</servlet-name>
		<url-pattern>/publish</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListArticleServlet</servlet-name>
		<url-pattern>/list</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetArticleDetailSevlet</servlet-name>
		<url-pattern>/detail</url-pattern>
	</servlet-mapping>
</web-app>
